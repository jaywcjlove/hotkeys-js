    "@uiw/reset.css": "1.0.4",
    "bannerjs": "1.0.7",
    "classnames": "2.3.1",
    "colors-cli": "1.0.27",
    "eslint": "8.8.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.28.0",
    "husky": "4.2.3",
    "kkt": "7.1.0",
    "jest": "27.0.4",
    "puppeteer": "10.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rimraf": "3.0.2",
